<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/whnLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/whs"
        tools:ignore="ContentDescription" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/sUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/whnLogo"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:hint="@string/username"
        android:background="#ffffff"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/sPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sUsername"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/passForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sPassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/forgotPwd"
        android:textColor="#123456"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passForgot"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:text="@string/login"/>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/register" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#e6ffff"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/homeicon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"/>

    <ImageButton
        android:id="@+id/searchIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/searchicon"
        android:layout_toEndOf="@id/homeIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/aboutIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/abouticon"
        android:layout_toEndOf="@id/searchIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/leaderIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/leadericon"
        android:layout_toEndOf="@id/aboutIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/usericon"
        android:layout_toEndOf="@id/leaderIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>




</RelativeLayout>