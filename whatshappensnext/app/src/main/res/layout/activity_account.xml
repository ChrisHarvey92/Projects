<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textViewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/textViewAccount"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername"
        android:text="Email"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewTotalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total points"
        android:layout_below="@id/textViewEmail"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTotalPoints"
        android:text="Number"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPoints"
        android:layout_centerInParent="true"
        android:text="Reset Password"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnResetPass"
        android:layout_centerInParent="true"
        android:text="Log out"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#e6ffff"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/homeicon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"/>

    <ImageButton
        android:id="@+id/searchIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/searchicon"
        android:layout_toEndOf="@id/homeIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/aboutIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/abouticon"
        android:layout_toEndOf="@id/searchIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/leaderIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/leadericon"
        android:layout_toEndOf="@id/aboutIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/usericon"
        android:layout_toEndOf="@id/leaderIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"/>

</RelativeLayout>